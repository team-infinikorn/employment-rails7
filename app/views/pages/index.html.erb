<div class="container mx-auto mt-28 px-5 flex items-center">
  <div data-controller='modal' data-modal-modal-value="#personal-data-modal" class="w-full">
    <!-- Button to open the modal -->
    <div class=" text-right justify-center content-center mr-2">
      <%= link_to 'Personal Data', new_personal_datum_path, class:"px-12 py-8 b-1 border border-blue-500 text-blue-500 font-medium text-2xl rounded-xs hover:text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
    <%= turbo_frame_tag "person_modal" %>
  </div>

  <div data-controller='modal' data-modal-modal-value="#employer-data-modal" class="w-full">
    <!-- Button to open the modal -->
    <div class=" text-left justify-center content-center mr-2">
      <%= link_to 'Employer', new_employer_path, class:"px-12 py-8 b-1 border border-blue-500 text-blue-500 font-medium text-2xl rounded-xs hover:text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
</div>

<%= turbo_frame_tag "person_data_listing" do %>
  <%= render 'personal_data/listing' if PersonalDatum.exists? %>
<% end %>
